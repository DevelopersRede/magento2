<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <rede>
                <model>RedeFacade</model>
                <title>Pague com a Rede</title>
                <active>1</active>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <number_installments>12</number_installments>
                <min_total_installments>0</min_total_installments>

                <can_authorize>1</can_authorize>
                <can_sale>1</can_sale>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_refund>1</can_refund>
                <can_cancel>1</can_cancel>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>

                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>

                <paymentInfoKeys>Codigo de Retorno,Messagem de Retorno,Parcelas,Id Transação,Id Refund,Id Cancel,Bin,Last 4,Nsu,Código da autorização,Status da autorização,Titular do Cartão,Expiração do cartão,Ambiente</paymentInfoKeys>
                <privateInfoKeys>cc_type,cc_number</privateInfoKeys>
            </rede>
        </payment>
    </default>
</config>
